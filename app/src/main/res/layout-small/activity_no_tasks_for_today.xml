<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="made.by.hemangini.planyourday.Thankyou">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/notasks"
        android:textSize="@dimen/thankyouNoteSize_small"
        android:layout_weight="1"
        android:gravity="center"/>


    <Button
        android:id="@+id/Nexttask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:padding="@dimen/padding_10dp_small"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_10dp_small"/>

</LinearLayout>
