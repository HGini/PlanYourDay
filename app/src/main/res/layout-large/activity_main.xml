<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/Note"
                    android:padding="@dimen/padding_10dp_large"
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/EnteredNote"
                    android:hint="@string/WriteNote"
                    android:padding="@dimen/padding_10dp_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textCapSentences"/>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingtop_20dp_large"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_below="@+id/Note">
                <TextView
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:text="@string/Country"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <made.by.hemangini.planyourday.DelayAutocompleteTextview
                        android:id="@+id/autocomplete_country"
                        android:inputType="textCapWords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_10dp_large"
                        android:gravity="center"
                        android:hint="@string/countryeg"
                        android:dropDownWidth="match_parent"
                        android:imeOptions="flagNoExtractUi|actionSearch"/>
                    <ProgressBar
                        android:id="@+id/pb_loading_indicator_country"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="@dimen/padding_10dp_large"
                        android:layout_height="match_parent"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/City"
                android:layout_below="@+id/Country"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:text="@string/City"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <made.by.hemangini.planyourday.DelayAutocompleteTextview
                        android:id="@+id/autocomplete_city"
                        android:inputType="textCapWords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_10dp_large"
                        android:gravity="center"
                        android:hint="@string/cityeg"
                        android:dropDownWidth="match_parent"
                        android:imeOptions="flagNoExtractUi|actionSearch"/>
                    <ProgressBar
                        android:id="@+id/pb_loading_indicator_city"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="@dimen/padding_10dp_large"
                        android:layout_height="match_parent"
                        android:visibility="invisible"/>
                </LinearLayout>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/autolocality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_below="@+id/City">
                <TextView
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:text="@string/Locality"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <made.by.hemangini.planyourday.DelayAutocompleteTextview
                        android:id="@+id/autocomplete_locality"
                        android:inputType="textCapWords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_10dp_large"
                        android:gravity="center"
                        android:hint="@string/localityeg"
                        android:dropDownWidth="match_parent"
                        android:imeOptions="flagNoExtractUi|actionSearch"/>
                    <ProgressBar
                        android:id="@+id/pb_loading_indicator_place"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="@dimen/padding_10dp_large"
                        android:layout_height="match_parent"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingTop="@dimen/paddingtop_30dp_large"
                android:layout_below="@+id/autolocality">
                <TextView
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:text="@string/Date" />
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/radio_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Today"
                        android:onClick="onDateButtonClicked"/>
                    <RadioButton android:id="@+id/radio_otherday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/OtherDay"
                        android:onClick="onDateButtonClicked"/>
                </RadioGroup>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/paddingtop_20dp_large"
                android:orientation="vertical"
                android:layout_below="@+id/Date">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/dimen_task_large"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp_large"
                    android:text="@string/Time" />
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton android:id="@+id/radio_instant"
                            android:layout_width="@dimen/radiobutton_width_large"
                            android:layout_height="wrap_content"
                            android:text="@string/Instant"
                            android:onClick="onRadioButtonClicked"
                            android:padding="@dimen/padding_10dp_large" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_10dp_large"
                            android:hint="@string/InstantHint"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton android:id="@+id/radio_duration"
                            android:layout_width="@dimen/radiobutton_width_large"
                            android:layout_height="wrap_content"
                            android:text="@string/Duration"
                            android:onClick="onRadioButtonClicked"
                            android:padding="@dimen/padding_10dp_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_10dp_large"
                            android:hint="@string/DurationHint"/>
                    </LinearLayout>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingtop_20dp_large"
                android:layout_weight="1"
                android:layout_below="@+id/Time"
                android:gravity="center">

                <Button
                    android:id="@+id/Save"
                    android:text="@string/Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
